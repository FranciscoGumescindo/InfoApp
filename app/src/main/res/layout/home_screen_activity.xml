<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpaper"
    android:layout_height="match_parent"
    tools:context=".Activities.Industrial">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_local_library_black_24dp"
                android:drawablePadding="8dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:id="@+id/estudio"
                android:text="Programas de Estudio"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_noews_black_24dp"
                android:drawablePadding="8dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:id="@+id/noticias"
                android:text="Noticias"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_image_black_24dp"
                android:drawablePadding="8dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:id="@+id/galeria"
                android:text="Galeria"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_history_black_24dp"
                android:drawablePadding="8dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:id="@+id/historia"
                android:text="Historia"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_event_black_24dp"
                android:drawablePadding="8dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:id="@+id/fichas"
                android:text="Fichas"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_business_black_24dp"
                android:drawablePadding="8dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:id="@+id/map"
                android:text="UbicaciÃ³n"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
                android:drawablePadding="8dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:id="@+id/signout"
                android:text="Salir"
                android:background="@color/colorPrimaryDark"
                android:padding="3dp"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />



        </LinearLayout>
    </ScrollView>



</LinearLayout>
